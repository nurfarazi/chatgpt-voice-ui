{
  "name": "chatgpt-voice-ui",
  "version": "0.1.0",
  "description": "Chrome extension that personalizes the ChatGPT UI with themes, personas, and voice-first enhancements.",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist .turbo .vite",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint \"{src,scripts}/**/*.{ts,tsx}\" --max-warnings=0",
    "test": "vitest",
    "format": "prettier --write \"{src,docs}/**/*.{ts,tsx,js,json,css,md}\"",
    "pack": "npm run build && node scripts/pack-extension.mjs"
  },
  "keywords": [
    "chrome-extension",
    "chatgpt",
    "personalization",
    "voice"
  ],
  "author": "ChatGPT UI Personalization Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.1.27",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.39.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "adm-zip": "^0.5.16",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}
